<h2 class="card-header">Edit Post</h2>
    <form class="card-body edit-post-form">
        <div class="form-row">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input form-control"/>
        </div>

        <div class="form-row">
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{post.content}}" class="form-input form-control"/>
        </div>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="deletePost-btn btn">Delete Post</button>
    </form>


